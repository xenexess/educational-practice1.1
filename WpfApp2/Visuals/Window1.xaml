<Window x:Class="WpfApp2.Visuals.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Visuals"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="White">
        <TextBlock Text="Добавление данных" FontSize="30" Margin="240,70,240,340"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="ID"/>
            <TextBox x:Name="id_TxB" Text="{Binding id}"/>
            <TextBlock Text="ФИО"/>
            <TextBox x:Name="fullName_TxB" Text="{Binding fullName}"/>
            <TextBlock Text="Инвентарный номер"/>
            <TextBox x:Name="invNum_TxB" Text="{Binding invNum}"/>
            <TextBlock Text="Тип оборудования"/>
            <TextBox x:Name="invType_TxB" Text="{Binding invType}"/>
            <TextBlock Text="Стоимость оборудования"/>
            <TextBox x:Name="invCost_TxB" Text="{Binding invCost}"/>
            <TextBlock Text="Адресс"/>
            <TextBox x:Name="adress_TxB" Text="{Binding adress}"/>
            <Button Content="Сохранить" Click="Edit_Click"/>
        </StackPanel>
    </Grid>
</Window>
